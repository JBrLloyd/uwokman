  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "type": "edge",
      "request": "launch",
      "name": "Launch Edge against localhost",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "name": "Launch Microsoft Edge and open the Edge DevTools",
      "request": "launch",
      "type": "vscode-edge-devtools.debug",
      "url": "http://localhost:5000/src"
    }
  ]
}